<Window x:Class="ClientDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Python Job Manager" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- IP Address and Port Input -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Server IP Address:" FontSize="14"/>
            <TextBox x:Name="IPAddressTextBox" Width="300" Height="25" Margin="0,5,0,10"/>
            <TextBlock Text="Server Port:" FontSize="14"/>
            <TextBox x:Name="PortTextBox" Width="100" Height="25" Margin="0,5,0,10"/>
            <Button x:Name="RegisterButton" Content="Register" Width="120" Click="RegisterButton_Click" />
        </StackPanel>

        <!-- Input Label -->
        <TextBlock Text="Input Python Code:" FontSize="14" Margin="0,0,0,5" Grid.Row="1"/>

        <!-- TextBox for Python Code Input -->
        <TextBox x:Name="CodeInputTextBox" Grid.Row="2" Height="100" 
                 TextWrapping="Wrap" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>

        <!-- Button Panel -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="SubmitJobButton" Content="Submit Code" Width="120" Margin="5" Click="SubmitJob_Click"/>
            <Button x:Name="LoadFileButton" Content="Load From File" Width="120" Margin="5" Click="LoadFileButton_Click"/>
            <Button x:Name="JobStatusButton" Content="Check Job Status" Width="150" Margin="5" Click="JobStatusButton_Click"/>
        </StackPanel>

        <!-- Job Status Display -->
        <StackPanel Grid.Row="4" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBlock x:Name="StatusLabel" Text="Status: Waiting for Job..." FontSize="14" Margin="0,5" />
            <TextBlock x:Name="JobCountLabel" Text="Jobs Completed: 0" FontSize="14" Margin="0,5" />
        </StackPanel>
    </Grid>
</Window>
