<Window x:Class="MortalKombatLobbyClient.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MortalKombatLobbyClient"
        mc:Ignorable="d"
        Title="Mortal Kombat Lobby - Chat" Height="600" Width="900" Background="Black">
    <Grid>
        <TextBlock Text="{Binding LobbyName}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="24" Foreground="#FFD700" />
        <ListBox Name="MessagesListBox" Margin="20,108,20,152" Background="DarkGray" Foreground="White" FontSize="14" MouseDoubleClick="MessagesListBox_MouseDoubleClick"/>


        <TextBox Name="MessageTextBox" Height="40" Margin="20,0,187,100" VerticalAlignment="Bottom" FontSize="16" Background="White" Foreground="Black"/>
        <Button Name="SendButton" Content="Send" Height="40" VerticalAlignment="Bottom" Margin="730,0,20,100" FontSize="16" Background="#FF6600" Foreground="White" Click="SendButton_Click"/>
        <Button Name="ShareFileButton" Content="Share File" Height="40" VerticalAlignment="Bottom" Margin="20,0,722,29" FontSize="16" Background="#FF6600" Foreground="White" Click="ShareFileButton_Click"/>
        <Button Name="RefreshButton" Content="Refresh" Width="100" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,508" FontSize="16" Background="#FFD700" Foreground="Black" Click="RefreshButton_Click"/>
        <Button Name="PrivateMessageButton" Content="Private Message" Width="150" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,29" FontSize="16" Background="#FF6600" Foreground="White" Click="PrivateMessageButton_Click"/>
        <Button Name="BackButton" Content="Log Out" Width="100" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,36,0,0" FontSize="16" Background="Gray" Foreground="White" Click="BackButton_Click"/>
    </Grid>
</Window>
