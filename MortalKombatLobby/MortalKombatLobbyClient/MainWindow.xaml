<Window x:Class="MortalKombatLobbyClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MortalKombatLobbyClient"
        mc:Ignorable="d"
        Title="Mortal Kombat Lobby - Login" Height="400" Width="600" Background="Black">
    <Grid>
        <Image Source="Assets/mk_logo.png" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,43,0,0" Height="100"/>
        <TextBox Name="UsernameTextBox" Width="300" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center"
                 FontSize="16" Background="DarkGray" Foreground="White" />
        <Button Name="LoginButton" Content="Login" Width="200" Height="40" VerticalAlignment="Top" HorizontalAlignment="Center"
                FontSize="18" Background="#FF6600" Foreground="White" Click="LoginButton_Click" Margin="0,242,0,0" />
    </Grid>
</Window>
