<Window x:Class="MortalKombatLobbyClient.PrivateMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MortalKombatLobbyClient"
        mc:Ignorable="d"
        Title="Mortal Kombat Lobby - Private Message" Height="550" Width="600" Background="Black">
    <Grid>
        <TextBlock Text="Select User to Send Message:" VerticalAlignment="Bottom" Margin="20,0,350,127" FontSize="16" Foreground="#FFD700" />
        <ComboBox Name="UsersComboBox" Width="177" Margin="278,0,0,122" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="14" Background="White" Foreground="Black" Height="30"/>

        <Button Name="RefreshUsersButton" Content="Refresh Users" Height="30" Margin="460,0,20,122" VerticalAlignment="Bottom" FontSize="14" Background="#FF6600" Foreground="White" Click="RefreshUsersButton_Click"/>

        <TextBlock Text="Received Messages:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,98,0,0" FontSize="16" Foreground="#FFD700" />
        <ListBox Name="PrivateMessagesListBox" Margin="20,128,20,171" Background="DarkGray" Foreground="White" FontSize="14"/>

        <Button Name="RefreshMessagesButton" Content="Refresh Messages" Width="150" Height="30" HorizontalAlignment="Right" Margin="0,88,20,0" VerticalAlignment="Top" FontSize="14" Background="#FF6600" Foreground="White" Click="RefreshMessagesButton_Click"/>

        <TextBlock Text="Send Message:" VerticalAlignment="Bottom" Margin="20,0,441,68" FontSize="16" Foreground="#FFD700" />
        <TextBox Name="PrivateMessageTextBox" Height="40" Margin="20,0,145,20" VerticalAlignment="Bottom" FontSize="16" Background="White" Foreground="Black"/>
        <Button Name="SendPrivateMessageButton" Content="Send" Height="40" VerticalAlignment="Bottom" Margin="480,0,20,20" FontSize="16" Background="#FF6600" Foreground="White" Click="SendPrivateMessageButton_Click"/>

        <Button Name="BackButton" Content="Back" Width="80" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,480" FontSize="14" Background="Gray" Foreground="White" Click="BackButton_Click"/>
    </Grid>
</Window>
